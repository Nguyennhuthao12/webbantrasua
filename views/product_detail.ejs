
<%- include('./templates/header') %>
     <!--detail -->
     <section  class="body_detail">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <div class="box_product">
                            <img src="../public/img/<%=sp.image%>" alt="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="info_product">
                        <div class="name">
                            <h3><%=sp.name%></h3>
                            <p class="price"><%=sp.price%>đ</p>
                           <form action="" method="post">
                            <h4 class="topping">Topping:</h4>
                            <% dsTP.forEach(tp => { %>
                                <input type="checkbox" name="toppingList" id="tp-<%=tp.id%>" value="<%=tp.id%>">
                                <label for="<%=tp.id%>">
                                    <img src="../public/img/<%=tp.image%>" width="30px" alt="" style="border-radius: 10%;">
                                    <%=tp.name%>
                                </label><br>
                                <% }); %>
                                <div class="size">
                                    <h3>Size:</h3>
                                    <span>M</span>
                                    <span>L</span>
                                </div>
                                <label style="font-size: 18px;"  for="quantity">Số lượng:</label>
                                <input class="detail_sl" type="number" name="quantity" id="quantity" value="1" min="1"><br>
                                <button class="cart_detail" type="submit" class="cart">Thêm vào giỏ</button>
                           </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- End detail -->
<%- include('./templates/footer') %>
    

   

   